pipeline{
    agent any
    environment{
        PATH = /opt/maven3/bin:$PATH
    }
    stages{
        stage("git clone"){
            steps{
                git 'https://github.com/krishnamajja/hello-world.git'
            }
        }    
    stage("maven build"){
            steps{
                sh "mvn clean package"
            }
        }
    }
}
